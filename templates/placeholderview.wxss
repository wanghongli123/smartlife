
.placeholder-view {
    width: 100%;
    height: 100%;
    z-index: 999;
    display: flex;
    position: fixed;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: white;
}

.placeholder-view .loading-text {
    color: white;
}

.placeholder-view .loading-image {
    width: 36rpx;
    height: 36rpx;
}

.placeholder-view .reload-view {
    margin-top: 50rpx;
    font-size: 14px;
    color: #444444;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    padding: 20rpx 40rpx;
    border: solid 1rpx #eaeaea;
    border-radius: 10rpx;
}

.placeholder-view .error-image {
    max-width: 200rpx;
    max-height: 200rpx;
}
