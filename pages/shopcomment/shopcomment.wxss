/* pages/shopcomment/shopcomment.wxss */

@import '../../templates/scoreview.wxss';
@import '../../templates/shopinfoview.wxss';
@import '../../templates/commenttagsview.wxss';
@import '../../templates/commonscoreview.wxss';
@import '../../templates/placeholderview.wxss';
@import '../../templates/commentphotosview.wxss';
@import '../../templates/commentsectionview.wxss';

.commentview-bgcolor {
    background-color: white;
}

.content-view {
    margin: 0 60rpx;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.padding-view {
    opacity: 0;
    width: 100%;
    height: 20rpx;
}

.input-view {
    margin: 20rpx 0;
    width: 100%;
    border-radius: 5px;
    background-color: #f9f9f9;
    border: solid 1rpx #c2c9cb;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    
    position: relative;
}

.input-view.normalPadding {
    padding: 20rpx 20rpx 105rpx 20rpx;
}

.input-view.editingPadding {
    padding: 20rpx 20rpx 70rpx 20rpx; 
}

.input-areatext {
    flex: 1;
    color: #444444;
    font-size: 14px;
    font-family: PingFangSC;
}

.placeholder-areatext {
    color: #9ca4a8;
    font-size: 14px;
    font-family: PingFangSC;
}

.input-alert-view {
    height: 33rpx;
    width: 100%;
    position: absolute;
    bottom: 18rpx;
    display: flex;
    flex-direction: row;
    font-family: PingFangSC;
    font-size: 12px;
    color: #9ca4a8;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0 30rpx;
}

.input-alert-view view {
    display: flex;
    align-items: center;
    justify-content: center;
}

.input-alert-view image {
    width: 24rpx;
    height: 24rpx;
    margin-right: 9rpx;
}

.confirm-view {
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;    
    font-size: 16px;
    bottom: 0;
    z-index: 888;
    width: 100%;
    height: 80rpx;
}

.confirm-view.posting-enable-false {
    color: white;
    background-color: #eaeaea;
}

.confirm-view.posting-enable-true {
    color: white;
    background-color: #01d1c1;
}

.bottom-view {
    width: 100%;
    height: 180rpx;
}
