<view class="container">
    <import src="../../templates/shopcell"/>
    <block wx:for="{{shops}}" wx:for-item="shop" wx:key="*this">
        <template is="{{shop}}"></template>
    </block>

    <import src="../../templates/placeholderview"/>
    <template is="placeholderview" data="{{pagestate}}"></template>

    <!--åº•éƒ¨tabbar-->
    <view class="tab-view">
        <block wx:for="{{tabNames}}" wx:key="*this">
            <view class="tab-item {{tabIndex==index?'active':''}}" data-tabIndex="{{index}}" bindtap="clickOnTabitemView">{{item}}</view>
        </block>
    </view>
</view>