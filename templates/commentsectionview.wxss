.comment-section-view {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.comment-section-view .line-view {
    flex: 1;
    width: 100%;
    height: 0;
    border-top: solid 1rpx #c2c9cb;
}

.comment-section-view .title-view {
    color: #9ca4a8;
    font-size: 12px;
    font-family: PingFangSC;
    box-sizing: border-box;
    padding: 0 24rpx;
}
