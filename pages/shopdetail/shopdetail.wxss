/* pages/shopdetail/shopdetail.wxss */

@import '../../templates/shopcell.wxss';
@import '../../templates/addressview.wxss';
@import '../../templates/shoptagsview.wxss';
@import '../../templates/placeholderview.wxss';
@import '../../templates/shopservicecell.wxss';
@import '../../templates/shopcommentcell.wxss';
@import '../../templates/commonsectionview.wxss';
@import '../../templates/commentsummaryview.wxss';
@import '../../templates/shopdetailbottomview.wxss';

.shop-view {
    width: 100%;
    height: 100%;
    background-color: white;
}

.shop-view .shopimages-view {
    width: 100%;
    height: 400rpx;
    background-color: lightgray;
}

.instruction-view {
    width: 100%;
    height: 92rpx;
    padding: 0 30rpx;
    margin-top: 30rpx;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.vertical-padding-view {
    width: 100%;
    height: 30rpx;
}

.line-super-view {
    width: 100%;
    padding: 0 30rpx;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.line-view {
    height: 0;
    width: 100%;
    border-top: solid 1rpx #eaeaea;
}

.seperator-box {
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.seperator-view {
    width: 100%;
    border-top: solid 1rpx #eaeaea;
}

.options-view {
    width: 100%;
    height: 90rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.option-view {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #888888;
}

.option-item {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    font-family: PingFangSC;
    font-weight: 600;
}

.option-item-active {
    color: #ff4466;
}

.option-bottom-view {
    width: 80rpx;
    height: 6rpx;
    margin-top: auto;
    margin-bottom: 0;
}

.option-bottom-active {
    background-color: #ff4466;
}

.comments-view {
    width: 100%;
    height: 60rpx;
    background-color: lightskyblue;
}

.shop-intro-view {
    font-family: PingFangSC;
    font-size: 14px;
    line-height: 1.5;
    color: #444444;
    padding: 30rpx 30rpx 0 30rpx;
    box-sizing: border-box;
    text-overflow: ellipsis;
    display: -webkit-box;
    text-align: justify;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.shop-intro-view.limit-line {
    -webkit-line-clamp: 3;
}

.bottom-padding-view {
    width: 100%;
    height: 210rpx;
}
