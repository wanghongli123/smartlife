.shop-cell {
    width: 100%;
    height: 188rpx;
    box-sizing: border-box;
    padding: 24rpx 30rpx 0 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: white;
}

.shop-cell .shop-info-view {
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
}

.shop-cell .avatar-view {
    width: 150rpx;
    height: 100%;
    overflow: hidden;
}

.shop-cell .detail-view {
    flex: 1;
    display: flex;
    overflow: hidden;
    flex-direction: column;
    margin-left: 20rpx;
}

.shop-cell .name-view {
    flex: 1;
    max-width: 100%;
    font-size: 14px;
    color: #2f2f2f;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
}

.shop-cell .name-view view {
    width: 100%;
    max-height: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.shop-cell .tags-view {
    flex: 1;
    display: flex;
    flex-direction: row;
    align-items: center;
    overflow: hidden;
    max-width: 100%;
}

.shop-cell .service-view {
    padding: 0 14rpx; 
    height: 44rpx;
    border-radius: 10rpx;
    border: solid 1rpx #9ca4a8;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    font-size: 12px;
    color: #9ca4a8;
}

.shop-cell .masks-view {
    flex: 1;
    height: 100%;
    overflow: scroll;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
}

.shop-cell .mask-view {
    float: left;
    margin-left: 20rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.shop-cell .mask-view image {
    margin-left: 10rpx;
    max-width: 80rpx;
    max-height: 28rpx;
}

.shop-cell .operation-view {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    margin-left: auto;
    margin-right: 0;
    font-size: 10px;
    box-sizing: border-box;
    height: 100%;
}

.shop-cell .icon-collection {
    margin: 0 20rpx;
    width: 37rpx;
    height: 35rpx;
}

.shop-cell .other-info-view {
    width: 100%;
    height: 62rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    box-sizing: border-box;
}

.shop-cell .stars-view {
    width: 150rpx;
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}

.shop-cell .star-view {
    width: 23rpx;
    height: 23rpx;
}

.shop-cell .comment-view {
    flex: 1;
    height: 100%;
    font-size: 12px;
    color: #9ca4a8;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-left: 20rpx;
    margin-right: 20rpx;
    display: flex;
    align-items: center;
}

.shop-cell .collection-view {
    font-size: 12px;
    color: #9ca4a8;
    margin-left: auto;
    margin-right: 0;
}

.shop-cell .bottom-line {
    width: 100%;
    height: 0;
    border-top: solid 1rpx #eaeaea;
}
