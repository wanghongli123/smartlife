.shop-comment-cell {
    width: 100%;
    display: flex;
    flex-direction: row;
    padding: 30rpx;
    box-sizing: border-box;
}

.shop-comment-cell .view-bottom-line {
    border-bottom: solid 1rpx #eaeaea;
}

.shop-comment-cell .avatar-view {
    width: 70rpx;
    height: 70rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    overflow: hidden;
}

.shop-comment-cell .avatar-image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.shop-comment-cell .info-view {
    flex: 1;
    margin-left: 30rpx;
    display: flex;
    flex-direction: column;
}

.shop-comment-cell .top-view {
    margin-top: 6rpx;
    width: 100%;
    height: 40rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.shop-comment-cell .left-view {
    min-width: 60%;
    height: 100%;
    font-family: PingFangSC;
    font-size: 14px;
    font-weight: 600;
    color: #232323;
    overflow: hidden;
    text-overflow: ellipsis;
    display: flex;
    flex-direction: row;
    align-items: center;
    white-space: nowrap;
}

.shop-comment-cell .stars-view {
    display: flex;
    flex-direction: row;
    margin-left: 20rpx;
}

.shop-comment-cell .star-view {
    margin-right: 4rpx;
    width: 23rpx;
    height: 22rpx;
}

.shop-comment-cell .right-view {
    max-width: 40%;
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-family: PingFangSC;
    font-size: 12px;
    color: #9ca4a8;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.shop-comment-cell .right-view image {
    width: 26rpx;
    height: 30rpx;
    margin-right: 13rpx;
}

.shop-comment-cell .right-view view {
    overflow: hidden;
    text-overflow: ellipsis;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
}

.shop-comment-cell .comment-view {
    margin-top: 7rpx;
    font-family: PingFangSC;
    font-size: 14px;
    line-height: 1.5;
    color: #444444;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break:break-all;
    display:-webkit-box;
    -webkit-line-clamp:3;
    -webkit-box-orient:vertical;
}

.shop-comment-cell .photos-view {
    width: 100%;
    display: flex;
    flex-direction: row;
    margin-top: 24rpx;
}

.shop-comment-cell .photo-view {
    width: 172rpx;
    height: 172rpx;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
    margin-right: 10rpx;
}

.shop-comment-cell .photo-image {
    width: 100%;
    height: 100%;
}

.shop-comment-cell .mask-view {
    font-family: PingFangSC;
    font-size: 11px;
    font-weight: 600;
    color: #ffffff;
    background-color: rgba(0, 0, 0, 0.3);
    position: absolute;
    top: 0;
}

.shop-comment-cell .bottom-view {
    width: 100%;
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-family: PingFangSC;
    font-size: 12px;
    color: #9ca4a8;
}
