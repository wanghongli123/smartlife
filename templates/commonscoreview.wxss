.common-score-view {
    width: 100%;
    display: flex;
    flex-direction: row;
    font-family: PingFangSC;
    font-size: 12px;
    overflow: scroll;
    align-items: center;
    color: #9ca4a8;
}

.common-score-view .left-view {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.common-score-view .normal-color {
    color: #9ca4a8;
}

.common-score-view .score-color {
    color: #fda32c;
}

.common-score-view .stars-view {
    margin-left: 47rpx;
    display: flex;
    /*overflow: scroll;*/
    flex-direction: row;
}

.common-score-view .star-view {
    width: 50rpx;
    height: 48rpx;
    margin: 0 3.6rpx;
}

.common-score-view .right-view {
    flex: 1;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding-left: 20rpx;
}
